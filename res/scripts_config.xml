<scripts_config.xml>
	<!--
		Current policy: defined in overrides.
		Format:
		<login>
			<host>
				<name> name of server </name>
				<short_name> short name of server </short_name>
				<url> address:port </url>
				<url_token> alternative address:port </url_token> - optional
				<public_key_path> path to public key </public_key_path> - optional
				<game_area_id> ... </game_area_id> - optional
				<periphery_id> ... </periphery_id> - optional
			</host>
			...
		</login>

